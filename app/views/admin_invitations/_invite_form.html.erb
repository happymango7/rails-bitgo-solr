<%= simple_form_for(AdminInvitation.new) do |f| %>
    <%= f.input :user_id, as: :hidden, input_html: { value: user.id } %>
    <%= f.input :project_id, as: :hidden, input_html: { value: project.id } %>
    <%= f.input :sender_id, as: :hidden, input_html: { value: current_user.id } %>
    <%= f.submit "Invite", class: "button postfix" %>
<% end %>