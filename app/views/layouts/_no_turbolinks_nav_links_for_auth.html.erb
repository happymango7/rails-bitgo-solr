<% if user_signed_in? %>
  <li><%= link_to 'Dashboard', dashboard_path, data: { no_turbolink: true } %></li>
  <li><%= link_to current_user.name.split(" ")[0], current_user, data: { no_turbolink: true } %></li>
  <li><%= link_to 'Sign out', destroy_user_session_path, :method=>'delete', data: { no_turbolink: true } %></li>
<% else %>

  <li><%= link_to 'Sign in', new_user_session_path, data: { no_turbolink: true } %></li>
  <li><%= link_to 'Sign up', new_user_registration_path, class: "sign-up-nav", data: { no_turbolink: true } %></li>
<%end%>
