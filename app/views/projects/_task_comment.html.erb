<div class="comment" id="Task-comments">
  <h5><i class="fa fa-comment-o" aria-hidden="true"></i>&nbsp;&nbsp;Comments</h5>
  <% @task_comments.each do |comment| %>
      <div class="comment-view">
        <div class="profile-image">
          <% if comment.user.picture? %><%= link_to (image_tag comment.user.picture, :size => "30x30"), comment.user  %>
          <%else%>
              <%= gravatar_for_user(comment.user) %>
          <%end%>
        </div>
        <div class="comment-text">
          <P><%= comment.body %></P>
          <h6><%=comment.created_at.to_formatted_s(:long) if !comment.created_at.nil?%></h6>
          <!--<a href="#">Reply</a>-->
        </div>
      </div>
      <hr>
  <%end%>
</div>
