$("#textarea-edit").hide();
$(".content-section").hide();
$("#textarea-save").show();
$("#textarea-editor").show();
var tempString = "";
<% @contents.each_with_index do |content, index| %>
  <% unless index == 0 %>
    tempString += "\n"
  <% end %>
  tempString += "<%= content.html_safe %>";
<% end %>
$("#textarea-editor").val(tempString);